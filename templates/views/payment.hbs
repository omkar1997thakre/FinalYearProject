<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="css/payment.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <div class="container">
   <h1> Payment method</h1>
   <img src="\css\scannerimage.png" alt="Browser not supported">
    <h2>Total Amount: Rs.{{ amount }}</h2>
    <p>Selected Seat: {{ seatNumber }}</p>
    <button type="button" class="btn btn-success" id="recievedpayment">Payment Received</button>

    </div>
   <script>
       document.getElementById('recievedpayment').addEventListener('click', function() {
            // Use window.location.href to navigate to another page with parameters
            const redirectUrl = `/receipt?timing={{ timing }}&seatNumber={{ seatNumber }}&movieName={{ movieName }}&paymentStatus=success`;
            window.location.href = redirectUrl;
        });
    document.addEventListener("DOMContentLoaded", function () {
        // Get the timing parameter from the URL
        const urlParams = new URLSearchParams(window.location.search);
        const timing = urlParams.get('timing') || 'N/A';

        // Use the timing as needed, e.g., display it on the page
        document.getElementById('selectedTiming').innerText = `Selected Timing: ${timing}`;
    });
</script>

</body>
</html>